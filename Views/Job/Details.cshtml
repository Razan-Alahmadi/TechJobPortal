@model TechJobPortal.Models.JobListing

@{
    ViewData["Title"] = "Job Details";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Title</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Company Name</th>
        <td>@Model.CompanyName</td>
    </tr>
    <tr>
        <th>Location</th>
        <td>@Model.Location</td>
    </tr>
    <tr>
        <th>Job Type</th>
        <td>
            <select class="form-select" disabled>
                @foreach (var type in Enum.GetValues(typeof(TechJobPortal.Models.JobType)))
                {
                    <option value="@type" selected="@(type.Equals(Model.JobType) ? "selected" : null)">@type</option>
                }
            </select>
        </td>
    </tr>
    <tr>
        <th>Posted Date</th>
        <td>@Model.PostedDate.ToString("MMM dd, yyyy")</td>
    </tr>
</table>

<a asp-controller="Job" asp-action="Index" class="btn btn-primary">Back to Job List</a>
